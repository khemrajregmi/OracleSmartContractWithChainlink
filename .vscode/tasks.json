{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy Oracle Contracts",
            "type": "shell",
            "command": "npx",
            "args": [
                "hardhat",
                "run",
                "scripts/deploy.js",
                "--network",
                "localhost"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Hardhat Tests",
            "type": "shell",
            "command": "npx",
            "args": [
                "hardhat",
                "test"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Start Hardhat Node",
            "type": "shell",
            "command": "npx",
            "args": [
                "hardhat",
                "node"
            ],
            "isBackground": true,
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
